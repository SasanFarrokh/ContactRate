<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lesson"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="ir.cdesign.contactrate.lessons.Lesson">

    <include layout="@layout/toolbar_back_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/all_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:checked="true"
            android:text="all"
            android:textColor="#f2f2f2"
            android:layout_marginRight="10dp"
            android:background="#70333333"/>

        <Button
            android:id="@+id/mark_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:checked="false"
            android:text="mark"
            android:textColor="#f2f2f2"
            android:layout_marginLeft="10dp"
            android:background="#70333333"/>

    </LinearLayout>

    <include layout="@layout/lesson_all_row_layout"/>

</LinearLayout>
