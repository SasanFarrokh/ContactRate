<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0793d4"
    tools:context="ir.cdesign.contactrate.SplashActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="140dp"
            android:layout_marginTop="50dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />


        <TextView
            android:id="@+id/splash_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#f2f2f2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/welcome"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/splash_text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#f2f2f2"
            android:text="Please Tell Us Who You Are"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/splash_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#f2f2f2"
            android:singleLine="true"
            android:textColor="#f2f2f2"
            android:hint="Name :"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/splash_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#f2f2f2"
            android:singleLine="true"
            android:inputType="phone"
            android:textColor="#f2f2f2"
            android:hint="Phone Number :"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/square_top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/clogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#f5f5f5"
            android:text="Made By Cdesign Group" />

    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:onClick="onOkClick"
        android:layout_marginBottom="60dp"
        android:background="#70f2f2f2"
        android:textColor="#000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="What's next ?!"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:id="@+id/next_button_two"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:onClick="onDoneClick"
        android:layout_marginBottom="60dp"
        android:background="#70f2f2f2"
        android:textColor="#000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Done"
        android:layout_gravity="center_horizontal|bottom" />




</FrameLayout>
