<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ir.cdesign.contactrate.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backblur" />

    <TextView
        android:id="@+id/langSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:padding="5dp"
        android:text="فارسی"
        android:textColor="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/clogo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/clogo" />

        <ImageView
            android:id="@+id/designlogo"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:src="@drawable/design_logo" />

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/splash_page_one" />

        <include layout="@layout/splash_sign_up" />

    </ViewFlipper>

</FrameLayout>
