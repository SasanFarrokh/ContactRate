<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="15dp"
        android:src="@drawable/logo"
        android:tint="#000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/dialogtxt"
        android:textSize="18dp"
        android:lineSpacingMultiplier="1.18"/>

    <View style="@style/nav_seperator"
        android:background="#A000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="شما میتوانید از طریق راه های ارتباطی زیر با ما در ارتباط  باشین با تشکر تیم سی دیزاین"
        android:textSize="18dp"
        android:lineSpacingMultiplier="1.18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="support@cdesign.ir"
        android:textColor="#282828"
        android:textSize="20dp" />

</LinearLayout>