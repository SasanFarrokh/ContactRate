<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="5dp">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:paddingTop="14dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo_c"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/clogo"
            android:tint="#000"/>
        <ImageView
            android:id="@+id/logo_design"
            android:layout_toRightOf="@id/logo_c"
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/design_logo"
            android:tint="#000"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/dialogtxt"
        android:textSize="18dp"
        android:lineSpacingMultiplier="1.18"/>

    <View style="@style/nav_seperator"
        android:background="#A000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="شما میتوانید از طریق راه های ارتباطی زیر با ما در ارتباط  باشین با تشکر تیم سی دیزاین"
        android:textSize="18dp"
        android:lineSpacingMultiplier="1.18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="support@cdesign.ir"
        android:textColor="#282828"
        android:textSize="20dp" />

</LinearLayout>