<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tutorial_bg"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"        android:layout_marginTop="40dp"

        android:src="@drawable/tutpicseven"/>

    <TextView
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/tutorial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="در این صفحه سه فیلد تاریخ ، ساعت و یادداشت را تنظیم کنید."
        android:lineSpacingMultiplier="1.35"
        android:gravity="center"
        android:textSize="18dp" />

    <TextView
        android:padding="10dp"
        android:textColor="@color/tutorial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="در زمان و تاریخ مشخص شده بر روی تقویم تلفن شما یک یادآور تنظیم میشود."
        android:lineSpacingMultiplier="1.35"
        android:gravity="center"
        android:textSize="18dp" />
    <TextView
        android:padding="10dp"
        android:textColor="@color/tutorial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="پس از انجام وظیفه برروی (تیک) آن کلیک کنید و امتیاز آنرا به مجموع امتیازات خود اضافه کنید."
        android:lineSpacingMultiplier="1.35"
        android:gravity="center"
        android:textSize="18dp" />
    </LinearLayout>

</ScrollView>