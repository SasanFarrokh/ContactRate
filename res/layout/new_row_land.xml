<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#70333333"
    android:onClick="onNews"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#70333333">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scaleType="centerCrop"
           android:src="@drawable/news_land"/>

       <TextView
           android:id="@+id/news_title_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#f2f2f2"
           android:textSize="17dp"
           android:gravity="center"
           android:text="This Is News Title"
           android:padding="5dp"/>

       <TextView
           android:id="@+id/news_body_text"
           android:layout_width="match_parent"
           android:padding="7dp"
           android:textSize="15dp"
           android:text="This Is News Body This Is News Body This Is News Body This Is News Body This Is News Body"
           android:textColor="#f2f2f2"
           android:layout_marginBottom="5dp"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="right"
           android:textColor="@color/colorAccent"
           android:layout_margin="5dp"
           android:text="read more ..."/>


   </LinearLayout>
</android.support.v7.widget.CardView>